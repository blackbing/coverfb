
<div id="background-image">
</div>
<div class="controller">
  <input type="file" id="uploadBtn" class="hidden" accept="image/png,image/jpg">
</div>
<div id="main">
  <div id="navbar">
    <div class="fb-like" style="z-index: 500;top:50px;left:10px;" data-href="http://coverfb.blackbing.net" data-send="true" data-layout="box_count" data-width="220" data-show-faces="true"></div>
  </div>
  <div id="profile_pic_education">
    <div class="controller-group">
      <i class="icon-upload hidden">select photo</i>
      <i class="icon-camera" id="cropBtnProfile">snapshot</i>
      <i class="icon-download-alt hidden">download</i>
      <!--
      <i class="myicon-clockwise">↷</i>
      <i class="myicon-anticolockwise">↶</i>
      -->
    </div>
  </div>
  <div id="cover_image">
    <span class="btn btn-primary select-photo" id="select_photo">Select a photo</span>
    <div class="controller-group">
      <i class="icon-upload hidden">select photo</i>
      <i class="icon-camera" id="cropBtnCover">snapshot</i>
      <i class="icon-download-alt hidden">download</i>
      <!--
      <i class="myicon-clockwise">↷</i>
      <i class="myicon-anticolockwise">↶</i>
      -->
    </div>
  </div>
  <div class="leftSide"></div>
  <div class="rightSide"></div>
</div>
<audio id="camera">
  <source src="<%= asset_path('camera-sound.mp3') %>" type="audio/mpeg" />
</audio>
